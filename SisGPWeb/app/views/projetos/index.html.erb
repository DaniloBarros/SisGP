<p id="notice"><%= notice %></p>

<h1>Listando Projetos</h1>

<ul class="collapsible" data-collapsible="accordion">
  <% @projetos.each do |projeto| %>
  <li>
    <div class="collapsible-header teal lighten-2">
      <i class="material-icons">tab</i><%= projeto.nome%></div>

    <div class="collapsible-body">
      <table >
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data Inicio</th>
            <th>Data Fim</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody >
          <tr>
            <td><%= projeto.nome %></td>
            <td><%= projeto.descricao %></td>
            <td><%= projeto.dataInicio %></td>
            <td><%= projeto.dataFim %></td>
            <td></td>
            <td><%= link_to 'Show', projeto,:class=>"waves-effect waves-light btn"  %></td>
            <td><%= link_to 'Edit', edit_projeto_path(projeto),:class=>"waves-effect waves-light btn"  %></td>
            <td><%= link_to 'Criar Atividade', new_projeto_atividade_path(projeto) , :class=>"waves-effect waves-light btn"  %></td>
          </tr>
        </tbody>



      </table>

      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <div class="collapsible-header teal lighten-4">
            <i class="material-icons">assignment</i>Listar tarefas
          </div>
          <div class="collapsible-body">
            <% projeto.atividades.each do |atividade| %>
            <div class="collection">
              <div class="row collection-item teal accent-2">
                <div class="col s1  ">Nome:
                  <%= atividade.nome %>
                </div>
                <div class="col s1">Descrição:
                  <%= atividade.descricao %>
                </div>
                <div class="col s1"><%= projeto.nome %></div>
                <div class=" col s1 offset-s2"><%= link_to 'Show', :class=>"waves-effect waves btn"  %></div>
                <div class="col s1">
                  <%= link_to 'Edit', edit_projeto_atividade_path(projeto , atividade),:class=>"waves-effect waves-light btn"  %></div>
              </div>
            </div>
            <%end%>
          </div>
        </li>
      </ul>


    </div>
  </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Projeto', new_projeto_path,:class=>"waves-effect waves-light btn"  %>
